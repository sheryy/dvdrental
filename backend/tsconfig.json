{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    // "allowJs": true,
    // "checkJs": true,
    // "maxNodeModuleJsDepth": 1,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
